---
import { Layers } from "@lucide/astro";

const featuresItems = [
  {
    title: "Layerd security",
    description:
      "With layerd security, we ensure the safety of every unit we provide.",
    icon: Layers,
  },
  {
    title: "Quality control of each part",
    description: "Every unit you send is checked carefully for every detail.",
    icon: "",
  },
  {
    title: "Relaible customer service",
    description:
      "our customer service is available 24/7 to help you with any issues.",
    icon: "",
  },
  {
    title: "Maintenance manual book",
    description:
      "We provide a guidebook that can be used to ensure maximum care.",
    icon: "",
  },
  {
    title: "Delivered safely",
    description:
      "Every unit we send arrives safely and quickly, without any obstacles or drama.",
    icon: "",
  },
  {
    title: "Based on artificial intelligence",
    description:
      "You can control and view each unit from your phone, its very easy to use.",
    icon: "",
  },
];
---

<section class="w-full h-full flex flex-col bg-gray-100 gap-20 py-24 px-40">
  <div class="flex w-full items-center justify-center">
    <h1 class="text-6xl w-2/4 text-center leading-tight font-medium text-black">
      We offer quality,<span class="text-gray-400">
        with the best materials and service</span
      >
    </h1>
  </div>
  <div
    class="grid rounded-xl border overflow-hidden border-gray-300 grid-cols-3 w-full"
  >
    {
      featuresItems.map((item) => (
        <div class="flex outline-1 outline-gray-300 flex-col gap-6 bg-white p-8">
          <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center">
            {item.icon ? <item.icon /> : null}
          </div>
          <h2 class="text-2xl font-semibold text-black">{item.title}</h2>
          <p class="text-gray-600">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
